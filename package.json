{
    "name": "project-1-frontend",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "prepare": "husky install",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "test:jest": "jest /src/ --coverage --collectCoverageFrom='./src/**' --coverageDirectory='coverage'",
        "eject": "react-scripts eject"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "bracketSpacing": false,
        "jsxBracketSameLine": true,
        "embeddedLanguageFormatting": "off"
    },
    "dependencies": {
        "amazon-cognito-identity-js": "^5.0.3",
        "axios": "^0.21.1",
        "bootstrap": "^5.0.2",
        "bootstrap-icons": "^1.5.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-modal": "^3.14.3",
        "react-redux": "^7.2.4",
        "react-router-dom": "^5.2.0",
        "react-scripts": "^4.0.3",
        "reactstrap": "^8.9.0",
        "redux": "^4.1.0",
        "redux-devtools-extension": "^2.13.9",
        "redux-thunk": "^2.3.0",
        "typescript": "^4.3.4",
        "web-vitals": "^1.1.2"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^11.2.7",
        "@testing-library/user-event": "^12.8.3",
        "@types/enzyme": "^3.10.8",
        "@types/jest": "^26.0.24",
        "@types/node": "^12.20.15",
        "@types/react": "^17.0.11",
        "@types/react-dom": "^17.0.8",
        "@types/react-redux": "^7.1.16",
        "@types/react-router-dom": "^5.1.7",
        "@types/reactstrap": "^8.7.2",
        "@types/redux-thunk": "^2.1.0",
        "@wojtekmaj/enzyme-adapter-react-17": "^0.6.2",
        "aws-amplify": "^4.1.3",
        "enzyme": "^3.11.0",
        "enzyme-to-json": "^3.6.2",
        "husky": "^7.0.1",
        "lint-staged": "^11.0.1",
        "prettier": "^2.3.2",
        "raf": "^3.4.1",
        "redux-thunk": "^2.3.0",
        "ts-jest": "^27.0.3",
        "typescript": "^4.3.4"
    },
    "jest": {
        "snapshotSerializers": [
            "enzyme-to-json"
        ],
        "collectCoverageFrom": [
            "./src/**/*.{ts, tsx}"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/src/setupTests.ts"
        ],
        "moduleFileExtensions": [
            "...defaults.moduleFileExtensions",
            "ts",
            "tsx",
            "js"
        ],
        "testMatch": [
            "**/__tests__/**/*.+(ts|tsx|js)",
            "**/?(*.)+(spec|test).+(ts|tsx|js)"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        }
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
